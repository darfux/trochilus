<%= content_for :nav_bar_title do %>
    捐赠记录
<% end %>
<div>
  
  <table>
    <thead>
      <tr>
        <th>金额</th>
        <th>时间</th>
        <% if @project.endowment %>
        <th>类型</th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% @donation_record.actual_funds.each do |actual_fund| %>
        <tr>
          <td><%= actual_fund.amount! %></td>
          <td><%= l actual_fund.time! %></td>
          <% if @project.endowment %>
          <td><%= t actual_fund.fund_type.name, scope: 'fund.type' %></td>
          <% end %>
          <td><%= link_to '编辑', edit_actual_fund_path(actual_fund) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
<%= link_to "添加到款", new_donation_record_actual_fund_path(@donation_record) %>