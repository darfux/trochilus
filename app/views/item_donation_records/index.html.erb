<h1>Listing item_donation_records</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Project</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @item_donation_records.each do |item_donation_record| %>
      <tr>
        <td><%= item_donation_record.customer %></td>
        <td><%= item_donation_record.project %></td>
        <td><%= item_donation_record.creator %></td>
        <td><%= link_to 'Show', item_donation_record %></td>
        <td><%= link_to 'Edit', edit_item_donation_record_path(item_donation_record) %></td>
        <td><%= link_to 'Destroy', item_donation_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

