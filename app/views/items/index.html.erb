<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Name abbrpy</th>
      <th>Amount</th>
      <th>Price</th>
      <th>Comment</th>
      <th>Item donation record</th>
      <th>Item category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.name_abbrpy %></td>
        <td><%= item.amount %></td>
        <td><%= item.price %></td>
        <td><%= item.comment %></td>
        <td><%= item.item_donation_record %></td>
        <td><%= item.item_category %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

