<%= common_form do %>

<%= form_for(@form_param) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <%= error_messages_for @item %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :amount %><br>
    <%= f.number_field :amount %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </div>

  <%= f.hidden_field(:item_donation_record_id) %>
  <div class="field">
    <%= f.label :item_category %> <%= link_to '新建', new_item_category_path, target: :_blank  %><br>
    <%= f.select(:item_category_id, ItemCategory.all_spy.collect {|e| [ e.name, e.id ] }, { include_blank: true }, :class => :category_input) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<% end %>