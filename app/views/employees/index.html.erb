<h1>专员列表</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>姓名</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.id %></td>
        <td><%= employee.name %></td>
        <td><%= link_to '显示', employee %></td>
        <td><%= link_to '编辑', edit_employee_path(employee) %></td>
        <td><%= link_to '删除', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

