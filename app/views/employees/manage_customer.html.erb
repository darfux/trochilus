    <% counter=0 %>
    <% @current_user.customers.each do |c| %>
    <tr>
      <td><%= (counter+=1).to_s.rjust(2, '0') %></td>
      <td>X1234</td>
      <td><%= link_to c.name, c.customer %></td>
      <td><%= c.customer.class.ch %></td>
      <!-- <td>中国大陆</td> -->
      <!-- <td>18222993222</td> -->
      <td><%= c.total_donation %></td>
      <!-- <td>5*</td> -->
    </tr>
    <% end %>
  </tbody>
</table>