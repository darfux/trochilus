<%= form_for(@employee) do |f| %>
  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% @employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <%= fields_for :user, @employee.user do |u_f| %>
    <div class="field">
      <%= u_f.label :account %><br />
      <%= u_f.text_field :account %>
    </div>
    <div class="field">
      <%= u_f.label :password, 'Password:' %><br>
      <%= u_f.password_field :password %>
    </div>
   
    <div class="field">
      <%= u_f.label :password_confirmation, 'Confirm:' %><br>
      <%= u_f.password_field :password_confirmation %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit '提交'%>
  </div>
<% end %>
