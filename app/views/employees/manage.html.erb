<%= content_for :nav_bar_title do %>
<% end %>


<div class="manage-grid" id = "manage-grid-up">
  <div class="manage-grid-left manage-project">      
    <ul>
      <div class="title"><span class="title-text">近期项目</span><%= link_to "添加项目", new_project_path %></div>
      <div class="list-cells">
        <% @recent_projects.each do |pro| %>
          <div class="list-cell-line"><div class="list-cell"><%= link_to pro.name, pro %></div><span class="type"><%= pro.project_type.name %></span><span class="date"><%= pro.create_date %></span></div>
          <hr>
        <% end %>
      </div>
    </ul>
  </div>
  <span class="manage-grid-vertical-hr"></span>
  <div class="manage-grid-right manage-customer">    
    <ul>
      <div class="title"><span class="title-text">近期客户</span><%= link_to "添加客户", new_customer_path %></div>
      <div class="list-cells">
        <% @recent_customers.each do |cus| %>
          <div class="list-cell-line"><div class="list-cell"><%= link_to cus.name!, cus %></div><span class="type"><%= cus.class.ch %></span><span class="date"><%= cus.created_at!.to_date %></span></div>
          <hr>
        <% end %>
      </div>
    </ul>
  </div>
</div>
<!-- <hr class="manage-grid-hr"/> -->
<div class="manage-grid" id = "manage-grid-down">
  <div class="manage-grid-left">3</div>
  <span class="manage-grid-vertical-hr"></span>
  <div class="manage-grid-right">4</div>
</div>



