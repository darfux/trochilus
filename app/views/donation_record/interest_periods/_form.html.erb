<%= common_form do %>
<%= form_for(@donation_record_interest_period) do |f| %>
  <% if @donation_record_interest_period.errors.any? %>
    <div id="error_explanation">
      <%= error_messages_for @donation_record_interest_period %>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :rate %><br>
    <%= f.text_field :rate %>%
  </div>
  <div class="field">
    <%= f.label :start %><br>
    <%= f.date_select :start, start_year: default_start_year, default: Date.today.change(day: 1)  %>
  </div>
  <div class="field">
    <%= f.label :end %><br>
    <%= f.date_select :end, start_year: default_start_year, end_year: Date.today.year+15, default: Date.today.change(day: 1)  %>
  </div>
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<% end %>