<div class="field">
  <%= of.label :name %><br>
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.label :country %><br>
  <%= f.select :country_id, Region::Country.all.collect{ |e| [e.name, e.id] }, { include_blank: true }, id: :region_country_select   %>
</div>
<div class="field">
  <%= f.label :state %><br>
  <%= f.select :state_id, (c=@self_customer.country!) ? c.states.collect{ |e| [e.name, e.id] } : [], { include_blank: true }, id: :region_state_select   %>
</div>
<div class="field">
  <%= f.label :city %><br>
  <%= f.select :city_id, (s=@self_customer.state!) ? s.cities.collect{ |e| [e.name, e.id] } : [], { include_blank: true }, id: :region_city_select  %>
</div>
<div class="field">
  <%= of.label :address %><br>
  <%= f.text_field :address %>
</div>
<div class="field">
  <%= f.label :tel %><br>
  <%= f.text_field :tel %>
</div>
<div class="field">
  <%= f.label :email %><br>
  <%= f.text_field :email %>
</div>
<div class="field">
  <%= f.label :fax %><br>
  <%= f.text_field :fax %>
</div>
<div class="field">
  <%= f.label :postcode %><br>
  <%= f.text_field :postcode %>
</div>
<div class="field">
  <%= f.label :comment %><br />
  <%= f.text_area :comment %>
</div>