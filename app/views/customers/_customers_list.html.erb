  <% @customers.each do |i_customer| %>
  <dl>
    <%= check_box_tag nil, i_customer.id, nil, :class=>'customer-check', name: :customer %>
    <%= hidden_field_tag 'customer[]', i_customer.id %>
    <%= link_to i_customer.name!, i_customer, id: "customer-#{i_customer.id}", target: :_blank %>
  </dl>
  <% end %>