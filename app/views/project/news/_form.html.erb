<%= common_form do %>
<%= form_for(@project_news) do |f| %>
  <% if @project_news.errors.any? %>
    <div id="error_explanation">
      <%= error_messages_for @project_news %>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :link %><br>
    <%= f.text_area :link %>
  </div>
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<% end %>