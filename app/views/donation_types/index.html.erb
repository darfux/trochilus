<h1>Listing donation_types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donation_types.each do |donation_type| %>
      <tr>
        <td><%= donation_type.name %></td>
        <td><%= link_to 'Show', donation_type %></td>
        <td><%= link_to 'Edit', edit_donation_type_path(donation_type) %></td>
        <td><%= link_to 'Destroy', donation_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

