<h1>物品分类</h1>

<table>
  <thead>
    <tr>
      <th>类别</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @item_categories.each do |item_category| %>
      <tr>
        <td><%= item_category.name %></td>
        <td><%= link_to '编辑', edit_item_category_path(item_category) %></td>
        <td><%= link_to '删除', item_category, del_confirm %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新建', new_item_category_path %>
